#!/bin/bash

AGENT47_HOME="$HOME/.agent47"
TEMPLATES_DIR="$AGENT47_HOME/templates/skills"

SKILLS_DIR="skills"

echo "ğŸ§  Initializing agent skills..."

# Create skills directory if it doesn't exist
if [ ! -d "$SKILLS_DIR" ]; then
  mkdir "$SKILLS_DIR"
  echo "ğŸ“ Created directory: $SKILLS_DIR/"
else
  echo "ğŸ“ Directory already exists: $SKILLS_DIR/"
fi

for skill in analyze.md implement.md review.md refactor.md optimize.md; do
  if [ -f "$SKILLS_DIR/$skill" ]; then
    echo "âš ï¸  Skill already exists, skipping: $skill"
  else
    if [ -f "$TEMPLATES_DIR/$skill" ]; then
      cp "$TEMPLATES_DIR/$skill" "$SKILLS_DIR/$skill"
      echo "âœ… Created skill: $SKILLS_DIR/$skill"
    else
      echo "âŒ Template not found: $skill"
    fi
  fi
done

echo "ğŸš€ Skills setup complete."
